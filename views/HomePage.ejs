<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

    .carousel-inner img {
      width: 100%;
      height: 100%;
    }

    .login-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 50px;
    }

    .login-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 120px;
      height: 150px;
      border: 2px solid #007bff;
      border-radius: 10px;
      padding: 10px;
      background-color: #ffffff;
      transition: transform 0.3s ease;
    }

    .login-item img {
      width: 50px;
      height: 50px;
      margin-bottom: 10px;
    }

    .login-item p {
      font-size: 14px;
      font-weight: bold;
      color: #007bff;
      margin-top: 5px;
    }

    .login-item:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
    }

    .login-item:active {
      transform: scale(0.95);
    }

    /* Heading Style */
    .attendance-heading {
      text-align: center;
      font-size: 36px;
      font-weight: bold;
      margin-top: 50px;
      color: #007bff;
    }

  </style>

  <title>Attendance Management</title>
</head>
<body>

  <!-- Header Section -->
   <%- include('header.ejs') %>

   <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://gph.edu.in/images/slider/68189d9cab9ac.jpg" class="d-block w-100" alt="image1">
      </div>

      <div class="carousel-item">
        <img src="https://gph.edu.in/images/slider/68189d7b7a7d3.jpeg" class="d-block w-100" alt="image3">
      </div>

      <div class="carousel-item">
        <img src="https://gph.edu.in/images/slider/68189d985dcff.jpeg" class="d-block w-100" alt="image1">
      </div>
      <div class="carousel-item">
        <img src="https://gph.edu.in/images/slider/68189d4f420ab.jpg" class="d-block w-100" alt="image2">
      </div>
    </div>
  </div>

  <!-- Attendance Management Heading -->
  <div class="attendance-heading">
    <p>Attendance Management</p>
  </div>

  <!-- Below Will Container which Container of Different Signin Options -->
  <!-- Login Options Container -->
<div class="login-container">

  <a href="/principal_login">
    <div class="login-item">
      <img src="https://www.shutterstock.com/shutterstock/photos/1889840134/display_1500/stock-vector-vector-line-icon-for-principal-1889840134.jpg" alt="Principal_ICON">
      <p>PRINCIPAL</p>
    </div>
  </a>


  <a href="/teach_login">
    <div class="login-item">
      <img src="https://github.com/srmahitesh/storage/blob/main/staffLogo.png?raw=true" alt="Staff_ICON">
      <p>STAFF</p>
    </div>
  </a>


  <a href="/stu_login">
    <div class="login-item">
      <img src="https://raw.githubusercontent.com/srmahitesh/storage/refs/heads/main/student.png" alt="Student_ICON">
      <p>STUDENT</p>
    </div>
  </a>

  <a href="/parents">
    <div class="login-item">
      <img src="https://raw.githubusercontent.com/srmahitesh/storage/refs/heads/main/parentsIcon.png" alt="Parent_ICON">
      <p>PARENTS</p>
    </div>
  </a>
</div>


  <!-- Include Footer -->
  <%- include('footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>